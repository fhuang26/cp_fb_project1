<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPosterDt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/tvTitleDt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/ivPosterDt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/tvOverviewDt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleDt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:minHeight="27dp"
        android:textSize="19sp"
        android:color="@color/primary_text_default_material_dark"
        android:maxLines="8" />
    <TextView
        android:id="@+id/tvRelDateDt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOverviewDt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:minHeight="27dp"
        android:textSize="19sp"
        android:color="@color/primary_text_default_material_dark" />
</RelativeLayout>